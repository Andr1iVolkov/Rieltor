@using Rieltor.Models.Rieltor
@model HomePageViewModel

@{
    ViewData["Title"] = "Home Page";
}



<div class="row">
	@foreach (var item in Model.Rieltors)
	{
		<div class="col-md-3">
			<div class="card">
				<a href="@Url.Action("Show", "Rieltor", new { id = item.Id })">
				<h3 class="card-title"> @item.FirstName </h3>
				<img src="@item.Image"
					 class="card-img-top" />



			</div>
		</div>
	}
</div>



